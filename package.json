{
  "name": "dalle-node",
  "version": "1.0.0",
  "description": "Simple image generation tool with NodeJS + HTMX + Marko + OPENAPI",
  "main": "index.ts",
  "scripts": {
    "css": "tailwindcss src/styles/input.css -o src/styles/output.css --watch",
    "build": "rimraf dist && npm run build:server && npm run build:client",
    "clean": "rimraf dist",
    "build:client": "cross-env NODE_ENV=production vite build",
    "build:server": "cross-env NODE_ENV=production vite build --ssr index.ts",
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production NODE_PATH=./dist node --enable-source-maps ./index.js",
    "preview": "vite preview"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@marko/express": "^2.1.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "marko": "^5.32.0",
    "openai": "^4.19.0",
    "postcss-cli": "^10.1.0"
  },
  "devDependencies": {
    "@marko/compiler": "^5.34.0",
    "@marko/vite": "^4.1.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "marked": "^10.0.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
